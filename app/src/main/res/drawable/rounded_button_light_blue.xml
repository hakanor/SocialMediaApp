<!-- res/drawable/custom_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightBlue" /> <!-- Set your default color here -->
            <corners android:radius="10dp" /> <!-- Set the corner radius as needed -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightBlueClicked" /> <!-- Set your desired clicked color here -->
            <corners android:radius="10dp" /> <!-- Set the corner radius as needed -->
        </shape>
    </item>
</selector>
